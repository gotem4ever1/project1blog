<!-- showing article title and text -->
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<!-- showing add comment -->
<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>



 <!-- line back to index, edit,delete  %> -->
 <%= link_to "Edit", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
 <%= link_to 'Back', articles_path, class: "btn btn-xs btn-success" %>
<%= link_to "Delete", articles_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
